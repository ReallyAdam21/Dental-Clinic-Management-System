{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "dental-clinic-management-system",
  "version": "0.1.0",
  "identifier": "com.adam21.dentalclinicsystem",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "npm run dev",     
  "beforeBuildCommand": "npm run build"  
  },
  "app": {
    "windows": [
      {
        "title": "dental-clinic-management-system",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
